#see "man i3status" for documentation

general {
	colors = true
	interval = 5
	}
order += "disk /"
order += "load"
order += "tztime local"

tztime local {
	format = "%Y-%m_%d %H:%M:%S"
	}

load {
	format = "%1min"
}

disk "/" {
	format = "avail %avail"
}

tztime berlin {
        format = "%Y-%m-%d %H:%M:%S %Z"
        timezone = "Europe/Berlin"
}
